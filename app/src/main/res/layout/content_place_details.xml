<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.rocketapps.apps.android.flightcompanion.activities.PlaceDetailsActivity"
    tools:showIn="@layout/activity_place_details">


    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/gray_color"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="@string/general"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/white"
            android:padding="12dp"
            app:contentPadding="8dp"
            >

            <TextView
                android:textColor="@color/gray_color"
                android:padding="4dp"
                android:id="@+id/txt_general"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <TextView
            android:textColor="@color/gray_color"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="@string/history"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/white"
            android:padding="12dp"
            app:contentPadding="8dp"
            >

            <TextView
                android:textColor="@color/gray_color"
                android:padding="4dp"
                android:id="@+id/txt_history"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <TextView
            android:textColor="@color/gray_color"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="@string/geography"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/white"
            android:padding="12dp"
            app:contentPadding="8dp"
            >

            <TextView
                android:textColor="@color/gray_color"
                android:padding="4dp"
                android:id="@+id/txt_geography"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <TextView
            android:textColor="@color/gray_color"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="@string/climate"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/white"
            android:padding="12dp"
            app:contentPadding="8dp"
            >

            <TextView
                android:textColor="@color/gray_color"
                android:padding="4dp"
                android:id="@+id/txt_climate"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <TextView
            android:textColor="@color/gray_color"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="@string/culture"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/white"
            android:padding="12dp"
            app:contentPadding="8dp"
            >

            <TextView
                android:textColor="@color/gray_color"
                android:padding="4dp"
                android:id="@+id/txt_culture"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>


        <TextView
            android:textColor="@color/gray_color"
            android:padding="4dp"
            android:textSize="20sp"
            android:text="@string/images"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v4.view.ViewPager
            android:layout_marginBottom="16dp"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="280dp">

        </android.support.v4.view.ViewPager>




    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
